<p id="notice"><%= notice %></p>

<h1>Contents</h1>
<%= link_to 'New Content', new_content_path, class: 'btn btn-success' %>
<p></p>
<table>
  <thead>
    <tr>
	    <th>Class</th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @contents.each do |content| %>
		  <tr>
		    <td><%#= content.article.title %></td>
        <td><%= content.title %></td>
        <td><%= link_to 'Show', content, class: 'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_content_path(content), class: 'btn btn-info' %></td>
        <td><%= link_to 'Delete Content', content, method: :delete, data: { confirm: 'Are you sure?' } , class: 'btn btn-danger'%></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'Back', articles_path, class: 'btn btn-primary' %>
